{
  "name": "foambook",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint . --ext js,jsx",
    "lint:autofix": "eslint . --fix --ext js,jsx",
    "pretest": "npm run lint --silent"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true,
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "no-tabs": 0,
      "react/jsx-indent": 0,
      "react/jsx-indent-props": 0,
      "indent": [
        2,
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "jsx-a11y/label-has-for": 0,
      "comma-dangle": [
        "error",
        "never"
      ],
      "react/prop-types": 0
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "@types/react": "^16.4.16",
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.1",
    "connected-react-router": "^4.5.0",
    "d3": "^5.7.0",
    "he": "^1.2.0",
    "history": "^4.7.2",
    "informed": "^1.10.6",
    "lodash": "^4.17.11",
    "meteor-node-stubs": "^0.4.1",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.21",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "react": "^16.5.2",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.5.2",
    "react-faux-dom": "^4.2.0",
    "react-number-format": "^3.6.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-bootstrap": "^0.24.4",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "simpl-schema": "^1.5.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-meteor": "^5.1.0",
    "eslint-plugin-react": "^7.11.1"
  }
}
