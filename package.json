{
  "name": "foambook",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint . --ext js,jsx",
    "lint:autofix": "eslint . --fix --ext js,jsx",
    "pretest": "npm run lint --silent"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true,
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "no-tabs": 0,
      "react/jsx-indent": 0,
      "react/jsx-indent-props": 0,
      "indent": [
        2,
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "jsx-a11y/label-has-for": 0,
      "comma-dangle": [
        "error",
        "never"
      ],
      "react/prop-types": 0
    }
  },
  "dependencies": {
    "@babel/runtime": "7.0.0-beta.55",
    "@types/react": "^16.4.1",
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.0",
    "connected-react-router": "^4.4.1",
    "d3": "^5.5.0",
    "he": "^1.1.1",
    "history": "^4.7.2",
    "informed": "^1.10.4",
    "lodash": "^4.17.10",
    "meteor-node-stubs": "^0.4.1",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.21",
    "prop-types": "^15.6.2",
    "query-string": "^6.1.0",
    "react": "^16.4.1",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.4.1",
    "react-faux-dom": "^3.1.0",
    "react-number-format": "^3.5.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-bootstrap": "^0.24.4",
    "react-router-dom": "^4.3.1",
    "redux": "^3.7.2",
    "simpl-schema": "^0.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-meteor": "^4.2.2",
    "eslint-plugin-react": "^6.10.0"
  }
}
