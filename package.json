{
  "name": "foambook",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint . --ext js,jsx",
    "lint:autofix": "eslint . --fix --ext js,jsx",
    "pretest": "npm run lint --silent"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true,
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "no-tabs": 0,
      "react/jsx-indent": 0,
      "react/jsx-indent-props": 0,
      "indent": [
        2,
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "jsx-a11y/label-has-for": 0,
      "comma-dangle": [
        "error",
        "never"
      ],
      "react/prop-types": 0
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "d3": "^4.12.0",
    "lodash": "^4.17.4",
    "meteor-node-stubs": "~0.2.4",
    "moment-timezone": "^0.5.14",
    "prop-types": "^15.6.0",
    "react": "^15.6.2",
    "react-addons-pure-render-mixin": "^15.6.2",
    "react-bootstrap": "^0.30.10",
    "react-dom": "^15.6.2",
    "react-faux-dom": "^3.1.0",
    "react-form": "^1.3.0",
    "react-number-format": "^1.1.1",
    "react-redux": "^5.0.6",
    "react-router": "^3.2.0",
    "react-router-bootstrap": "^0.23.2",
    "redux": "^3.7.2",
    "simpl-schema": "^0.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-meteor": "^4.1.6",
    "eslint-plugin-react": "^6.10.0"
  }
}
